{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
    "github>aquaproj/aqua-renovate-config#2.7.4"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "/aquaproj/",
        "/aws\\/aws-cli/",
        "/renovate/"
      ],
      "automerge": true,
      "extends": [
        "schedule:weekends"
      ]
    },
    {
      "matchManagers": [
        "helmfile"
      ],
      "labels": [
        "dependencies",
        "Helm"
      ]
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["UPDATE-MAJOR"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        "distroless\\/base-debian(?<currentValue>(?<major>\\d+)?)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "debian"
    }
  ]
}
