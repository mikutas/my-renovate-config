{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
    "github>aquaproj/aqua-renovate-config#2.10.0"
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "kubectl"
      ],
      "allowedVersions": "<=1.34"
    },
    {
      "matchDepNames": [
        "docker.io/rancher/k3s"
      ],
      "allowedVersions": "/^v[0-9]+\\.34\\.[0-9]+(\\-k3s[0-9]+)?$/"
    },
    {
      "automerge": true,
      "extends": [
        "schedule:weekends"
      ],
      "matchPackageNames": [
        "/aquaproj/",
        "/aws\\/aws-cli/",
        "/renovate/"
      ]
    },
    {
      "labels": [
        "dependencies",
        "Helm"
      ],
      "matchManagers": [
        "helmfile"
      ]
    },
    {
      "labels": [
        "UPDATE-MAJOR"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "depNameTemplate": "debian",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        "distroless\\/base-debian(?<currentValue>(?<major>\\d+)?)"
      ]
    }
  ]
}
